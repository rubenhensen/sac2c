<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
version="1.0">

<xsl:import href="common-make-head.xsl"/>
<xsl:import href="common-make-body.xsl"/>

<xsl:output method="text" indent="no"/>
<xsl:strip-space elements="*"/>

<!-- This stylesheet generates a node_basic.c file implementing all
     the make functions for nodes                                    -->

<xsl:template match="/">
  <xsl:text>
/*****************************************************************************
 * node_basic.c generated by ast2node_basic_c.xsl                            *
 *                                                                           *
 * DO NOT EDIT THIS FILE, EDIT ast.xml INSTEAD!                              *
 *****************************************************************************/
#ifdef NEW_AST
#include "node_basic.h"
#include "tree_basic.h"
#include "internal_lib.h"

#define AST_NO_COMPAT
#include "node_compat.h"

  </xsl:text>
  <xsl:apply-templates select="//syntaxtree/node"/>
  <xsl:text>
#undef AST_NO_COMPAT
#include "node_compat.h"

#endif /* NEW_AST */
  </xsl:text>
</xsl:template>

<xsl:template match="node">
  <xsl:text>

/*****************************************************************************
 * functions for N_</xsl:text><xsl:value-of select="@name"/><xsl:text>
 *****************************************************************************/

  </xsl:text>
  <xsl:apply-templates select="." mode="make-head"/>
  <xsl:apply-templates select="." mode="make-body"/>
</xsl:template>

</xsl:stylesheet>
