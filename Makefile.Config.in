################################################################################
#
# OS setup:
#

OS=@OS@
ARCH=@ARCH@


################################################################################
#
# MT & PHM Setup:
#

DISABLE_MT   := @DISABLE_MT@
DISABLE_PHM  := @DISABLE_PHM@


################################################################################
#
# svn setup:
#

REV := $(shell svn info | grep Revision: | sed -e 's/Revision: //g')


################################################################################
#
# general setup:
#
CC           := @CC@
CCPROD       := @CC@
CCFLAGS      := @MKCCFLAGS@ @OSFLAGS@
CCDEPS_FLAGS := @DEPSFLAG@ $(CCFLAGS)
CCPROD_FLAGS := @PDCCFLAGS@ @OSFLAGS@
CFLAGS       := -DSHOW_MALLOC -DWLAA_DEACTIVATED -DAE_DEACTIVATED \
                -DTSI_DEACTIVATED -DPADT_DEACTIVATED -DCLEANMEM
CPROD_FLAGS  := -DDBUG_OFF -DPRODUCTION -DWLAA_DEACTIVATED -DAE_DEACTIVATED \
                -DTSI_DEACTIVATED -DPADT_DEACTIVATED 
LIBTOOL      := $(PROJECT_ROOT)/libtool --silent --mode=link 

XSLTENGINE   := @XSLT@

MAKE_NORM    := $(MAKE) CC="$(CC)" CCFLAGS="$(CCFLAGS)" CFLAGS="$(CFLAGS)"
MAKE_PROD    := $(MAKE) CC="$(CCPROD)" CCFLAGS="$(CCPROD_FLAGS)" CFLAGS="$(CPROD_FLAGS)"
MAKE_CLEAN   := $(MAKE) TARGET="clean" clean
MAKEFLAGS    += --no-print-directory
LDDYNFLAG    := -export-dynamic

TAR          := tar
EXCLUDE_INCS := libsac runtime xml tools
INCS         := -I../../inc \
                $(patsubst %,-I../%,$(filter-out $(EXCLUDE_INCS),\
                                  $(notdir $(wildcard ../*))))
LIBS         :=@LIBS@@LEXLIB@
EFLIBS       :=-L/usr2/sacware/lib -lefence
RM           :=rm -f
GZIP         :=gzip -f
ECHO         :=echo
LEX          :=@LEX@ -n
YACC         :=@YACC@ -dv

ifeq ($(OS),solaris2.8)
  YYFLAGS   := -DYYDEBUG=1 -DYYLMAX=8192
else
  YYFLAGS   := -DYYLMAX=8192
endif

CLOCK_SKEW_ELIMINATION   := $(PROJECT_ROOT)/tools/bin/cse
FINGERPRINTER            := $(PROJECT_ROOT)/tools/bin/fingerprinter
CODE_BEAUTIFIER          := @CB@
ICM_TESTER               := $(PROJECT_ROOT)/tools/bin/icm_tester
